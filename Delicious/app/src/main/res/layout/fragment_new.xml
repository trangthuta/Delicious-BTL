<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.New">
    <!--<ImageView
        android:id="@+id/img_12"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_favorite2"/>-->
    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansprosemibold"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/textColor"
        android:text="Top yêu thích nhất"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_favoritest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv9"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/spinner_filter"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="0dp"
        android:popupBackground="@color/spinerlayout"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/rcv_favoritest"
        android:layout_gravity="end"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_below="@id/spinner_filter"/>
</RelativeLayout>
</ScrollView>