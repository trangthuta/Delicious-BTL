<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/bgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:elevation="4dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tt_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appbarColor">
        <ImageView
            android:id="@+id/btn_close_com_dialog"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_close3"/>
        <TextView
            android:id="@+id/tt_dialog_add_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/sourcesansproregular"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="Đổi mật khẩu"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tt_dialog"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <EditText
            android:id="@+id/edt_old_pass_dia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHighlight="@color/textColor"
            android:layout_below="@id/img_avatar_food"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:background="@drawable/bg_edt2"
            android:hint="Mật khẩu cũ..."
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@drawable/color_hinttext"
            android:fontFamily="@font/sourcesansproregular"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/edt_new_pass_dia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHighlight="@color/textColor"
            android:layout_below="@id/img_avatar_food"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:background="@drawable/bg_edt2"
            android:hint="Nhập mật khẩu mới..."
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@drawable/color_hinttext"
            android:fontFamily="@font/sourcesansproregular"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/edt_re_pass_dia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHighlight="@color/textColor"
            android:layout_below="@id/img_avatar_food"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:background="@drawable/bg_edt2"
            android:hint="Nhập lại mật khẩu..."
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@drawable/color_hinttext"
            android:fontFamily="@font/sourcesansproregular"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/btn_com_add_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn"
            android:text="Xác nhận"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/layout_rule"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>