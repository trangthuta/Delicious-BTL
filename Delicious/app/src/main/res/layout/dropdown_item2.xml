        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:text="hello"
        android:fontFamily="@font/sourcesansprosemibold"
        android:layout_marginLeft="10dp"/>
</LinearLayout>