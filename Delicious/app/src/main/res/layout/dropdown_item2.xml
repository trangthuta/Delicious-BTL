    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/icon_item"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <TextView
