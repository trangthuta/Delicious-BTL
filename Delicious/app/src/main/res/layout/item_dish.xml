<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
    android:id="@+id/itemDish"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="7.5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_idF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/img_avatarF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg2"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A00E1FF"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/bg_typeF"
            android:layout_width="120dp"
            android:layout_height="25dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#99ff0000"
            android:layout_margin="15dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_typeF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món chính"
                android:fontFamily="@font/sourcesansproboldi"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_nameF"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:shadowColor="@color/black"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="2"
            android:textColor="@color/white"
            android:fontFamily="@font/sourcesansproboldi"
            android:text="Cút lộn sào tỏi, ăn nhiều vào"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="bottom" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_amountViewF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="215"
                    android:textSize="18sp"
                    android:fontFamily="@font/sourcesansproboldi"
                    android:textColor="#D9FFFFFF"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_view"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/tv_amountLikeF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="18sp"
                    android:fontFamily="@font/sourcesansproboldi"
                    android:textColor="#D9FFFFFF"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_like"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_cheffood"/>
            <TextView
                android:id="@+id/tv_name_AuthorF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="2"
                android:textSize="16sp"
                android:fontFamily="@font/sourcesansproregular"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/icon_medal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:translationZ="3dp"
        android:src="@drawable/ic_medal1"
        android:visibility="invisible"/>

</RelativeLayout>